@model DeliveryServiceEF.Domain.Food

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Edit Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="FoodMVC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Id" name="Id" />
            <table>
                <tr>
                    <td><label asp-for="ManufacturerId" class="control-label"></label></td>
                    <td><input asp-for="ManufacturerId" class="form-control" readonly /></td>
                </tr>
                <tr>
                    <td><label asp-for="TypeId" class="control-label"></label></td>
                    <td><input asp-for="TypeId" class="form-control" /></td>
                    <td><span asp-validation-for="TypeId" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Name" class="control-label"></label></td>
                    <td><input asp-for="Name" class="form-control" /></td>
                    <td><span asp-validation-for="Name" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Price" class="control-label"></label></td>
                    <td><input asp-for="Price" class="form-control" /></td>
                    <td><span asp-validation-for="Price" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Weight" class="control-label"></label></td>
                    <td><input asp-for="Weight" class="form-control" /></td>
                    <td><span asp-validation-for="Weight" class="text-danger"></span></td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>

    </div>
</div>

@Html.Partial("_ValidationScriptsPartial")
